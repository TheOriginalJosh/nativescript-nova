<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

      <!-- Home page contents -->
      <scroll-view>
        <stack-layout class="padding">
            <StackLayout class="p">
                <Button class="button button-light" text="Light Button" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-accent" text="Accent Button" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-dark" text="Dark Button" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-small button-light" text="Light Button Small" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-small button-accent" text="Accent Button Small" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-small button-dark" text="Dark Button Small" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-large button-light" text="Light Button Large" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-large button-accent" text="Accent Button Large" />
            </StackLayout>
            <StackLayout class="p">
                <Button class="button button-large button-dark" text="Dark Button Large" />
            </StackLayout>
        </stack-layout>
    </scroll-view>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>