<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

        <stack-layout>
            <stack-layout class="padding">
                <SegmentedBar class="segmented-bar segmented-bar-light" selectedBackgroundColor="#FF404B">
                <SegmentedBar.items>
                    <SegmentedBarItem title="Item 1" />
                    <SegmentedBarItem title="Item 2" />
                    <SegmentedBarItem title="Item 3" />
                </SegmentedBar.items>
                </SegmentedBar>
            </stack-layout>
            
            <stack-layout class="padding">
                <SegmentedBar class="segmented-bar segmented-bar-dark" selectedBackgroundColor="#243044">
                <SegmentedBar.items>
                    <SegmentedBarItem title="Item 1" />
                    <SegmentedBarItem title="Item 2" />
                    <SegmentedBarItem title="Item 3" />
                </SegmentedBar.items>
                </SegmentedBar>
            </stack-layout>
        </stack-layout>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
