<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

    <stack-layout>
        <stack-layout class="form">
            <stack-layout class="form-item ">
                <label text="Slider Normal" class="input-label" />
                <grid-layout columns="24, *, 30" rows="auto">
                    <label text="&#xf027;" col="0" class="fa-large" />
                    <slider value="25" maxValue="100" minValue="0" col="1" />
                    <label text="&#xf028;" col="2" class="fa-large right" />
                </grid-layout>    
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="Slider Accent" class="input-label" />
                <grid-layout columns="24, *, 30" rows="auto">
                    <label text="&#xf26b;" col="0" class="fa" />
                    <slider value="50" maxValue="100" minValue="0" col="1" class="slider-accent"/>
                    <label text="&#xf268;" col="2" class="fa right" />
                </grid-layout>    
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="Slider Dark" class="input-label" />
                <grid-layout columns="24, *, 30" rows="auto">
                    <label text="&#xf006;" col="0" class="fa-large" />
                    <slider value="75" maxValue="100" minValue="0" col="1" class="slider-dark"/>
                    <label text="&#xf005;" col="2" class="fa-large right" />
                </grid-layout>    
            </stack-layout>
            
        </stack-layout>
    </stack-layout>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
